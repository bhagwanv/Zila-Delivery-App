<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemDetailsInfo"
            type="com.sk.ziladelivery.ui.views.viewmodels.ItemDetailsInfo" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/AppTheme.NoActionBar"
        tools:context=".Activities.activity.MainActivity">

        <!--<include
            android:id="@+id/hometoolbar"
            layout="@layout/toolbar_arrow" />-->

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/hometoolbar"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/rlView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_padding_50"
            android:layout_below="@+id/view">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view">

                    <LinearLayout
                        android:id="@+id/name_address_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <!--<LinearLayout
                            android:id="@+id/circle_imageview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@+id/created_date"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/profile_round"
                                app:civ_circle_background_color="#FFF" />
                        </LinearLayout>-->

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view"
                            android:layout_toRightOf="@+id/circle_imageview"
                            android:weightSum="1.5">

                            <LinearLayout
                                android:id="@+id/name_address_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:id="@+id/tv_orderno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/created_date"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@+id/profile_image"
                                    android:text="@{itemDetailsInfo.orderid}"
                                    android:textColor="@color/Black"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:id="@+id/tv_shopname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_cust_name"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@+id/profile_image"
                                    android:maxLines="1"
                                    android:text="@{itemDetailsInfo.shopname}"
                                    android:textColor="@color/Black"
                                    android:textSize="15dp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/txt_orderdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_address_layout1"
                        android:layout_marginTop="10dp"
                        android:background="@color/divider_drak_color">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                style="@style/SegoeUISemiBold"
                                android:id="@+id/orderdetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Order_Details"
                                android:textColor="@color/gray"
                                android:textSize="20dp"
                                android:textAllCaps="false"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_orderdetails"
                        android:layout_marginTop="10dp"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name_address_layout1"
                            android:background="@drawable/grey_rectangle"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:layout_weight=".1"
                                    android:gravity="center"
                                    android:text="@string/no."
                                    android:textColor="@color/light_grey" />

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:id="@+id/items"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:layout_marginStart="2dp"
                                    android:layout_weight=".6"
                                    android:gravity="center|left"
                                    android:text="@string/items"
                                    android:textColor="@color/light_grey"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:id="@+id/quantity"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:layout_weight=".1"
                                    android:gravity="center"
                                    android:text="@string/qty"
                                    android:textColor="@color/light_grey"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:id="@+id/price"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:layout_weight=".2"
                                    android:gravity="center"
                                    android:text="@string/price"
                                    android:textColor="@color/light_grey"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/table_layout" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/rv_item"
                        android:background="@color/colorOrange" />

                    <LinearLayout
                        android:id="@+id/total_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="1">

                            <TextView
                                style="@style/SegoeUIBold"
                                android:id="@+id/total"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:layout_weight=".6"
                                android:gravity="left"
                                android:text="@string/Total"
                                android:textColor="@color/colorOrange"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/SegoeUIBold"
                                android:id="@+id/total_quantity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:layout_weight=".2"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/colorOrange"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/SegoeUIBold"
                                android:id="@+id/total_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:layout_weight=".2"
                                android:gravity="center"
                                android:text="@{itemDetailsInfo.grossAmount}"
                                android:textColor="@color/colorOrange"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/txt_orderstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/total_layout"
                        android:layout_marginTop="10dp"
                        android:background="@color/divider_drak_color">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                style="@style/SegoeUISemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/orderstatus"
                                android:textColor="@color/gray"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/status_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_orderstatus"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SegoeUI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/SelectStatus" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/grey_oval"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:id="@+id/spStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:gravity="left"
                                    android:textColor="@color/green"
                                    android:spinnerMode="dropdown"
                                    android:text="@{itemDetailsInfo.status}" />
                            </LinearLayout>

                            <TextView
                                style="@style/SegoeUI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/comment" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/grey_oval"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:id="@+id/spComment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:gravity="left"
                                    android:textColor="@color/green"
                                    android:spinnerMode="dropdown"
                                    android:text="@{itemDetailsInfo.comments}" />
                                />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_option_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/status_layout"
                        android:layout_marginTop="10dp"
                        android:background="@color/divider_drak_color">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                style="@style/SegoeUISemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Payment_option"
                                android:textColor="@color/gray"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/trupay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_option_txt"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_wallet" />

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SegoeUISemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/online_payment"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <TextView
                                style="@style/SegoeUI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/moneytransfer_process" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/trupay"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/ic_money" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1.5"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cash_payment"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    style="@style/SegoeUI"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rcv_amnt" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/grey_oval"
                            android:gravity="center"
                            android:padding="6dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_rupee_indian" />

                            <EditText
                                style="@style/SegoeUISemiBold"
                                android:id="@+id/et_case_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textboxshape"
                                android:hint="@string/enetr_amnt"
                                android:focusable="false"
                                android:clickable="false"
                                android:focusableInTouchMode="false"
                                android:text="@{itemDetailsInfo.cashamount}"
                                android:inputType="number"
                                android:padding="5dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cheque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cash"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1.9">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.4">

                                <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_cheque" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ChequE_PAYMENT"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    style="@style/SegoeUI"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/chque_photo" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="0.5"
                                android:gravity="right">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="10dp"
                                    android:padding="5dp"
                                    android:src="@drawable/downarrow_grey" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:weightSum="1.5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/SegoeUI"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rcv_amnt"
                                    android:textColor="@color/black" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/grey_oval"
                                android:gravity="center"
                                android:padding="6dp">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_rupee_indian" />

                                <EditText

                                    style="@style/SegoeUIBold"
                                    android:id="@+id/et_cheque_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/textboxshape"
                                    android:hint="@string/enetr_amnt"
                                    android:focusable="false"
                                    android:clickable="false"
                                    android:focusableInTouchMode="false"
                                    android:text="@{itemDetailsInfo.checkamount}"
                                    android:inputType="number"
                                    android:padding="5dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/UPI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cheque"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/ll_mpaso_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1.7">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2">

                                <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/ic_online_payment" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/SegoeUISemiBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/m_pos_amount"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    style="@style/SegoeUI"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Reference_number" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="0.5"
                                android:gravity="right">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="10dp"
                                    android:padding="5dp"
                                    android:src="@drawable/downarrow_grey" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/UTRDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1.5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:weightSum="1.5">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/enter_mphos"
                                        android:textColor="@color/black" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:background="@drawable/grey_oval"
                                    android:gravity="center"
                                    android:padding="7dp">

                                    <EditText
                                        android:id="@+id/UPIReference"
                                        style="@style/SegoeUI"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/textboxshape"
                                        android:gravity="center"
                                        android:maxLength="8"
                                        android:text="@{itemDetailsInfo.electronicPaymentNo}"
                                        android:inputType="number"
                                        android:hint="xxxx-xxxx-xxxx"
                                        android:singleLine="true" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="20dp"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/enter_amntrcv"
                                        android:textColor="@color/black" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/grey_oval"
                                    android:gravity="center"
                                    android:padding="6dp">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/ic_rupee_indian"
                                        android:tint="@color/Black" />

                                    <EditText
                                        android:id="@+id/UPIAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/textboxshape"
                                        android:gravity="center"
                                        android:text="@{itemDetailsInfo.electronicAmount}"
                                        android:hint="@string/enter_amnt"
                                        android:inputType="number"

                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/UPI"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            style="@style/SegoeUISemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/view_margin_20"
                            android:textColor="@color/medium_sea_green"
                            android:text="@string/amnt_rcv"
                            android:textSize="20dp" />

                        <TextView
                            style="@style/SegoeUISemiBold"
                            android:id="@+id/tv_received_total_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/view_margin_10"
                            android:textColor="@color/medium_sea_green"
                            android:text="@{itemDetailsInfo.recivedAmount}"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>

        </LinearLayout>


    </RelativeLayout>
</layout>