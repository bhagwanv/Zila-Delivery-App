<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="@drawable/button_bg_blue_view"
            android:layout_marginStart="@dimen/font_size_10"
            android:layout_marginEnd="@dimen/font_size_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/LLMainLayout"
                android:gravity="center"
                android:layout_toLeftOf="@+id/iv_cancle"
                android:layout_marginEnd="5dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_skip"
                    style="@style/SegoeUI"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/font_size_10"
                    android:text="Skip"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_14" />


                <TextView
                    android:id="@+id/tv_re_attmpt"
                    style="@style/SegoeUI"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/font_size_10"
                    android:text="Re-Attempt"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tv_re_dispacth"
                    style="@style/SegoeUI"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/font_size_10"
                    android:visibility="gone"
                    android:text="Re-Dispatch"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_cancle"
                style="@style/SegoeUI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/font_size_10"
                android:src="@drawable/cross_button"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:scaleType="centerInside"
                android:textSize="@dimen/font_size_16"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />
        </RelativeLayout>
    </LinearLayout>

</layout>