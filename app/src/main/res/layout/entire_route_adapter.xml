<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/ic_dot" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="3dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorLightBlueHeader" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_shop_name"
                        style="@style/SegoeUISemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_size_10"
                        android:layout_marginStart="@dimen/font_size_20"
                        android:textSize="12dp"
                        android:maxLines="2"
                        android:textColor="@color/green"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_add"
                        style="@style/SegoeUISemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/pading_bottom_5"
                        android:layout_marginStart="@dimen/font_size_20"
                        android:textSize="12dp"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:text="124 bajrang nagar ">

                    </TextView>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</layout>