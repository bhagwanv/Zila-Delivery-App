<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/font_size_10"
        android:background="@drawable/button_border_line_gray"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_collection_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_collect_payment" />


        <LinearLayout
            android:id="@+id/ll_button_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_margin_40"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginTop="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            android:layout_marginBottom="@dimen/font_size_10"
            android:gravity="center"
            android:background="@drawable/button_border_line_gray">

            <TextView
                android:id="@+id/tv_payment_mode"
                style="@style/SegoeUIBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="12dp" />


            <ImageView
                android:id="@+id/bt_green_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:scaleType="centerInside" />

        </LinearLayout>


    </LinearLayout>

</layout>